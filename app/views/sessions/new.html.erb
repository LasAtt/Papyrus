<h1>Sign in</h1>

<div class="row">
  <div class="col-lg-2 col-md-4 col-sm-8 col-xs-12">
    <%= form_tag session_path do %>
      <div class="form-group">
        <%= label_tag 'username' %>
        <%= text_field_tag :username, params[:username], class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag 'password' %>
        <%= password_field_tag :password, params[:password], class: "form-control" %>
      </div>
      <div class="form-group">
        <%= submit_tag "Log in", class: "btn btn-default" %>
      </div>
    <% end %>
  </div>
</div>