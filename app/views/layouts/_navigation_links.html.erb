
<li role="presentation" class="dropdown">
  <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-expanded="false">
    images <span class="caret"></span>
  </a>
  <ul class="dropdown-menu" role="menu">
    <li><%= link_to "images", images_path %></li>
    <li><%= link_to 'upload new', new_image_path %></li>
  </ul>
</li>
<li><%= link_to "tags", tags_path %></li>
<% if not current_user.nil? %>
  <li role="presentation" class="dropdown">
    <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-expanded="false">
      <%= current_user.username %> <span class="caret"></span>
    </a>
    <ul class="dropdown-menu" role="menu">
      <li><%= link_to current_user.username, current_user %></li>
      <li><%= link_to 'signout', signout_path, method: :delete %></li>
    </ul>
  </li>
<% else %>
  <li><%= link_to "sign in", signin_path %></li>
  <li><%= link_to "sign up", signup_path %></li>
<% end %>