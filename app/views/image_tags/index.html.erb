<p id="notice"><%= notice %></p>

<h1>Listing Image Tags</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Tag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @image_tags.each do |image_tag| %>
      <tr>
        <td><%= image_tag.image_id %></td>
        <td><%= image_tag.tag_id %></td>
        <td><%= link_to 'Show', image_tag %></td>
        <td><%= link_to 'Edit', edit_image_tag_path(image_tag) %></td>
        <td><%= link_to 'Destroy', image_tag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

