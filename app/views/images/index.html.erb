<p id="notice"><%= notice %></p>

<h1>Images</h1>

<div class="container-fluid">
  <div class="row-fluid">
    <% @images.each do |image| %>
      <div class="col-lg-2 col-sm-3 col-xs-4">
        <%= link_to(image, {class: "thumbnail"}) do %>
          <%= image_tag image.picture.url(:small) %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<br>

<%= link_to 'New Image', new_image_path %>
